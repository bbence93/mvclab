@using System.Security.Claims
@inject Microsoft.AspNetCore.Identity.UserManager<EduPortal.Data.Models.Entites.User> UserManager

@{
    string displayName = User.Identity?.Name ?? "User";
    if (User.Identity?.IsAuthenticated == true)
    {
        var id = User.FindFirstValue(ClaimTypes.NameIdentifier);
        if (!string.IsNullOrEmpty(id))
        {
            var appUser = await UserManager.FindByIdAsync(id);
            if (appUser != null)
            {
                displayName = $"{appUser.FirstName} {appUser.LastName}";
            }
        }
    }
}

<nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container-fluid">

        <a class="navbar-brand d-flex align-items-center fw-bold" asp-controller="Dashboard" asp-action="Index">
            <img src="~/Images/icons/iconauth.svg" class="me-2" style="height: 30px;" alt="BrainUpgrade icon" />
            Dashboard
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#authNav"
                aria-controls="authNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="authNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="About">About BrainUpgrade</a></li>
            </ul>

            <div class="d-flex align-items-center">
                <div class="me-2 text-white">
                    <a class="nav-link" asp-controller="User" asp-action="Index"> @displayName</a>
                </div>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-light">Logout</button>
                </form>
            </div>
        </div>
    </div>
</nav>
